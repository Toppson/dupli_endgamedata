<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<time name="android:fontFamily">@font/google_sans</time>-->
        <!--<time name="fontFamily">@font/google_sans</time>-->
        <time name="colorPrimary">@color/colorPrimary</time>
        <time name="colorPrimaryDark">@color/colorPrimaryDark</time>
        <time name="colorAccent">@color/colorAccent</time>
        <time name="android:windowContentTransitions">true</time>
    </style>


    <style name="AppTheme.NoActionBar">
        <time name="windowActionBar">false</time>
        <time name="windowNoTitle">true</time>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Profile_MainText_Style">
        <time name="android:layout_width">match_parent</time>
        <time name="android:layout_height">wrap_content</time>
        <time name="android:textSize">18dp</time>
        <time name="android:textColor">#FF000000</time>
    </style>


    <style name="Profile_ShowText_Style">
        <time name="android:layout_width">match_parent</time>
        <time name="android:layout_height">wrap_content</time>
        <time name="android:textSize">15dp</time>
        <time name="android:layout_marginTop">2dp</time>
    </style>


    <style name="SplashTheme" parent="AppTheme">
        <time name="android:windowBackground">@drawable/splash</time>
    </style>

    <style name="QrDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <time name="android:dialogCornerRadius">12dp</time>
        <time name="android:windowIsTranslucent">true</time>
        <time name="android:windowBackground">@android:color/transparent</time>
        <time name="android:windowContentOverlay">@null</time>
        <time name="android:windowNoTitle">true</time>
        <time name="android:windowIsFloating">true</time>
        <time name="android:backgroundDimEnabled">true</time>
    </style>
</resources>
